<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        
          <%= image_tag(place.image_url, size: "400x400", class: "img-responsive") %>
          <h3><%= place.name %></h3>
          <p><%= place.description %></p>
          <p><%= place.price %></p>
          <div class="btn btn-default"><%= link_to 'book now', bookings_path, id: "button-default" %></div>
          <div class="btn btn-info"><%= link_to 'Show more', place, id: "button-default" %></div>

          <% if signed_in? && current_user.admin? %>
          <div class="btn btn-default"><%= link_to 'Edit', edit_place_path(place), id: "button-default" %></div>
          <div class="btn btn-danger"><%= link_to 'Delete', place, method: :delete, data: { confirm: 'Are you sure?' }, id: "button-default" %></div>
          <% end %>

      </div>
    </div>
  </div>